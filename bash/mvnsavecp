if [ -a ./pom.xml ]; then 
    pomTimestamp=$(stat -f "%m" -t "%s" pom.xml)
    cpTxtTimestamp=0

    generateCpTxt=0
    #if cp.txt exists
    if [ -a ./cp.txt ]; then 
      cpTxtTimestamp=$(stat -f "%m" -t "%s" pom.xml)
      #if cp.txt timestamp is the same as pom.xml timestamp do nothing
      if [ $pomTimestamp == $cpTxtTimestamp ]; then
          generateCpTxt=0
      else
          #else timestamp is not the same
          generateCpTxt=1
      fi
    else
        #else cp.txt does not exist
        generateCpTxt=1
    fi
    
    #if generateCpTxt == 1
    if [ $generateCpTxt == '1' ]; then
      mvngencp > cp.txt
      #set cp.txt timestamp to pom.xml timestamp
      touch -r pom.xml cp.txt
    fi  
else 
  echo pom.xml does not exist in the current directory
fi